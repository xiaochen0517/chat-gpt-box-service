<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<springProfile name="prod, test">
		<!-- Define the file appender with rolling policy -->
		<appender name="FILE-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
			<encoder>
				<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
			</encoder>
			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<!-- Define the file name pattern with directories based on year, month, and day -->
				<fileNamePattern>logs/%d{yyyy}/%d{MM}/%d{dd}/my-application-%d{yyyy-MM-dd}.log</fileNamePattern>
				<maxHistory>30</maxHistory>
				<!-- Clean history on start -->
				<cleanHistoryOnStart>true</cleanHistoryOnStart>
			</rollingPolicy>
		</appender>

		<root level="ERROR">
			<appender-ref ref="FILE-APPENDER" />
			<appender-ref ref="CONSOLE-APPENDER" />
		</root>
	</springProfile>

	<!-- Define the console appender as before -->
	<appender name="CONSOLE-APPENDER" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<springProfile name="dev, local">
		<root level="DEBUG">
			<appender-ref ref="CONSOLE-APPENDER" />
		</root>
	</springProfile>

</configuration>
